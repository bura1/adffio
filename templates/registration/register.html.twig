{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div>
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <h3 class="mb-4 mt-3">Register</h3>

        {{ form_start(registrationForm) }}
            <label>Email</label>
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control mb-2'}}) }}

            <label>Password</label>
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control mb-2'}}) }}

            <div class="flex-column mb-3">
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input mb-2'}}) }}
            <label>Agree terms</label>
            </div>

            <button type="submit" class="btn btn-dark">Register</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
